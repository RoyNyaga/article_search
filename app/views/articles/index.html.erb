<div class="container">
  <div class="row search-form-div mt-3 mb-5">
    <div class="col-md-4 mx-auto">
      <%= form_with url: search_path, method: :get, remote: false, html: {id: "search-form"} do |form| %>
        <div class="row field-wrapper">
          <div class="col-md-11">
            <%= form.text_field :query, class: "form-control" %>
          </div>
          <div class="col-md-1">
            <i class="fa-solid fa-magnifying-glass"></i>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <div class="row">
      <div class="col-md-8">
        <h2>Articles</h2>
        <div class="article-list">
          <%= render "articles/article_list"%>
        </div>
      </div>
      <div class="col-md-4">
        <h2 class="text-center">Saved Searches</h2>
        <div class="saved-searches">
          <%= render "articles/saved_searches" %>
        </div>
      </div>
    </div>
  </div>

  <br>
  <%= link_to 'New Article', new_article_path, class: "genereal-btn-styles" %>
</div>

