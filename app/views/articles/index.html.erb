<div class="container">
  <div class="row search-form-div">
    <div class="col-md-4 mx-auto">
      <%= form_with url: search_path, method: :get, remote: false, html: {id: "search-form"} do |form| %>
        <%= form.text_field :query, class: "form-control" %>
      <% end %>
    </div>
  </div>
  <div class="articles-section">
    <h1>Articles</h1>
    <div class="article-list">
      <%= render "articles/article_list"%>
    </div>
  </div>
</div>
<br>
<%= link_to 'New Article', new_article_path %>
