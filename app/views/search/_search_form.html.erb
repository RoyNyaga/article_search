<div class="row search-form-div mt-3 mb-5">
    <div class="col-md-4 mx-auto">
      <%= form_with url: search_path, method: :get, remote: false, html: {id: "search-form"} do |form| %>
        <div class="row field-wrapper">
          <div class="col-md-11">
            <%= form.text_field :query, placeholder: "Enter your search", class: "form-control" %>
          </div>
          <div class="col-md-1">
            <i class="fa-solid fa-magnifying-glass"></i>
          </div>
        </div>
      <% end %>
    </div>
  </div>